class Rectangulo:
    def __init__(self, base, altura):
        self.base = base
        self.altura = altura
    
    def area(self):
        return self.base * self.altura 
    
    def perimetro(self):
        return 2 * (self.base + self.altura) 

# Uso de la clase Rectangulo
r1 = Rectangulo(5, 3)
print(f"Área y Perímetro (base 5, altura 3): {r1.area()}, {r1.perimetro()}")
print("-" * 20)
